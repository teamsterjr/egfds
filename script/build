pushd $(dirname "${0}") > /dev/null
basedir=$(pwd -L)
# Use "pwd -P" for the path without links. man bash for more info.
cd ../
rm -rf build
mkdir -p build
git archive HEAD | tar -x -C build
mv build/TODO build/ninty/static/todo.txt
cd build
rm -r script
rm -rf data
cp ../ninty/config.py ninty
echo 'Dockerfile' > .dockerignore
popd > /dev/null

echo "${basedir}"
